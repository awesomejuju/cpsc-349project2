<!doctype html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>
    <body>
        <h1 class="text-blue-700">app-index</h1>
        <div object>
        <ul array key="todos" sortable>
        {{#for todo in todos}}
        <li 
            object 
            key:text="@innerText"
            edit:text
         >{{default todo.text "New todo item"}}</li>
        {{/for}}
        </ul>
  <button new:todo>Add Todo</button>
</div>
    </body>
</html>